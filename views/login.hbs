<div class="title">
    <h1>Todo App</h1>
</div>
<div class='container'>
    <h2>Login to Your Account</h2>
    <form class="login" autocomplete="off" action="/" method="post">
        <div id='userEmail'>
            <input type="email" name="userEmail" placeholder="Enter your email adress" required="required"/>
        </div>
        <div id='password'>
            <input type="password" name="userPassword" placeholder="Enter your Password" required="required"/>
        </div>
        <button class="btn" type="submit">Login</button>
    </form>
    {{#if error }}
    <h3>{{ error.wrongData }}</h3>
    {{/if}}
    <div class="regist">
        <form method="get" action="/regist">
            <button class="btn" type="submit">Regist</button>
        </form>
    </div>
</div>